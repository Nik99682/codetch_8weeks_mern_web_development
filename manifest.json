{
  "manifest_version": 3,
  "name": "Productivity Manager",
  "version": "1.0",
  "description": "Manage tasks and boost productivity",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
